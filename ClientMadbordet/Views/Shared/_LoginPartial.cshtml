@using Microsoft.AspNetCore.Identity
@using ClientMadbordet.Models;

@{ var user = await UserManager.GetUserAsync(User); }

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Calendar", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="navbar-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@user.UserName</a>
            </li>
            <li class="navbar-item">
                <button type="submit" class="navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}