@using Microsoft.AspNetCore.Identity
@using ClientMadbordet.Models;

@{ var user = await UserManager.GetUserAsync(User); }

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-item  nav-link px-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">About Me</a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Calendar", new { area = "" })" method="post" id="logoutForm" class="ml-auto">
        <button class="btn btn-secondary" type="submit"><i class="fas fa-sign-out-alt"></i></button>
    </form>

}
else
{
    <a class="nav-item nav-link px-3" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Login" title="LOGIN"><i class="fas fa-sign-in-alt"></i></a>
}